startup_message off
vbell on
activity '^GActivity in window %'

hardstatus alwayslastline
hardstatus string '%{= dd}%c %06=%-Lw%40L>%{+b}%n*%f%t%{-}%+Lw%<'

blankerprg tty-clock -cs 
idle 300
defscrollback 5000

bind o blanker

screen -t root		0	#runroot
screen -t web		4	#runweb
screen -t irssi		3	#runirssi
screen -t bash		2	#runloop
screen -t main		1	#runmain
