#!/usr/bin/env bash
# a simple bash script output a horizontal rule 
# Copyright 2022 Jeremy Wakeman
# SPDX-License-Identifier: GPL-3.0-or-later

enter=0

# if options are passed, parse them
if [[  $1 =~ - ]] ; then
	if [[ $1 =~ e ]] ; then
		enter=1
	fi
	shift
fi

COLS="$(tput cols)"
if (( COLS <= 0 )) ; then
    COLS="${COLUMNS:-80}"
fi

hr() {
    local WORD="$1"
    if [[ -n "$WORD" ]] ; then
        local LINE=''
        while (( ${#LINE} < COLS ))
        do
            LINE="$LINE$WORD"
        done

        echo "${LINE:0:$COLS}"
    fi
}

hrs() {
    local WORD

    for WORD in "${@:-#}"
    do
        hr "$WORD"
		if [[ $enter -eq 1 ]] ; then
			read x
		fi
    done
}

[ "$0" == "$BASH_SOURCE" ] && hrs "$@"
